<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Randomize.ViewModel"
             x:Class="Randomize.View.EventDetailPage"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <vm:EventDetailViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Event Details" 
                   Style="{StaticResource EventTitleStyle}" 
                   Margin="0,0,0,10" />

            <Label Text="{Binding Event.Title}" 
                   Style="{StaticResource EventTitleStyle}" 
                   Margin="0,0,0,10" />

            <Label Text="{Binding Event.Description}" 
                   Style="{StaticResource EventLabelStyle}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
