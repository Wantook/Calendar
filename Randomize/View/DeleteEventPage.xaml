<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Randomize.ViewModel"
             x:Class="Randomize.View.DeleteEventPage">

    <ContentPage.BindingContext>
        <vm:DeleteEventViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Label Text="Delete Event" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>

            <Label Text="{Binding Event.Title}" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>

            <Label Text="{Binding Event.Description}" FontSize="18" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Gray"/>

            <Button Text="Delete" Command="{Binding DeleteEventCommand}" BackgroundColor="Red" TextColor="White"/>

            <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
