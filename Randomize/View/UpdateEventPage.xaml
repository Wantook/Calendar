<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Randomize.ViewModel"
             x:Class="Randomize.View.UpdateEventPage">

    <ContentPage.BindingContext>
        <vm:UpdateEventViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Label Text="Update Event" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>

            <Entry Text="{Binding Event.Title}" Placeholder="Event Title" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>

            <Editor Text="{Binding Event.Description}" Placeholder="Event Description" FontSize="18" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Gray"/>

            <Button Text="Save" Command="{Binding SaveEventCommand}" BackgroundColor="Green" TextColor="White"/>

            <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Red" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
